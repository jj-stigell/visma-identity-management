{
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "build",
    "types": ["node"],
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "target": "es2016"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/*"
  ]
}
